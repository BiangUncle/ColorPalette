.comp_list_container {
  height: 200rpx;
  width: 100%;
  background-color: white;
  display: flex;
  border-radius: 0 0 30rpx 30rpx;
  top: -250rpx;
  position: fixed;
  box-shadow: 0rpx 20rpx 15rpx 15rpx rgba(0, 0, 0, 0.1);
  z-index: 7;
}
.comp_list_container navigator {
  flex: 1;
  text-align: center;
  width: 25%;
  padding: 30rpx 50rpx 50rpx 50rpx;
}
.comp_list_container navigator image {
  width: 100%;
}
.comp_list_container navigator .color {
  width: 80%;
  margin: 10rpx;
}
.comp_list_container navigator .website {
  width: 80%;
  margin: 10rpx 10rpx 8rpx 10rpx;
}
.shade {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vh;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.75);
  z-index: 6;
}
